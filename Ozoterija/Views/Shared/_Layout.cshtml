    <div class="container body-content">
        <br /><br />
        @if (TempData["error"] != null)
        {
            if ((bool)TempData["error"] == true)
            {
                <div class="alert-danger">@TempData["message"]</div>
            }
            else if ((bool)TempData["error"] == false)
            {
