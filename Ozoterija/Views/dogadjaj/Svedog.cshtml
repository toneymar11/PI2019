@model IEnumerable<Ozoterija.Models.dogadjaj>

@{
    ViewBag.Title = "Svedog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th>
            Ime grada
        </th>
        <th>
            Naziv događaja
        </th>
        <th>
            Cijena događaja
        </th>
        <th>
            Datum događaja
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.grad.ime_grada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.naziv_dogadjaja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cijena_dogadjaja)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datum_dogadjaja)
        </td>
      
    </tr>
}

</table>
