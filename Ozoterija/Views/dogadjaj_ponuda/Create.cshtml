@model Ozoterija.Models.dogadjaj_ponuda

@{
    ViewBag.Title = "Napravi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Napravi događaj ponude</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fk_dogadjaj, "Naziv događaja", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_dogadjaj", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_dogadjaj, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fk_ponuda, "Cijena ponude", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_ponuda", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_ponuda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Napravi" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="btn btn-danger">
    <a class="boja" href="/dogadjaj_ponuda/">Natrag</a>
</div>
<style>
    .boja {
        color: white;
    }

        .boja:hover {
            color: black;
            text-decoration: none;
        }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
