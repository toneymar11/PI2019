@model Ozoterija.Models.najam

@{
    ViewBag.Title = "Izbriši najam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Izbriši najam</h2>

<h3>Jeste li sigurni da želite izbrisati najam?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Ime najma
        </dt>

        <dd>
            @Html.DisplayFor(model => model.naziv_najma)
        </dd>

        <dt>
           Vrsta najma
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tip_najma)
        </dd>

        <dt>
           Cijena najma
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cijena_najma)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Izbriši najam" class="btn btn-danger" />
        <a class="text-white btn btn-warning" href="~/najam/Index">Natrag</a>
    </div>
    }
</div>
