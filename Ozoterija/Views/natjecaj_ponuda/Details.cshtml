@model Ozoterija.Models.natjecaj_ponuda

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalji</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tip Natječaja
        </dt>

        <dd>
            @Html.DisplayFor(model => model.natjecaj.tip_natjecaja)
        </dd>

        <dt>
            Cijena Ponude
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ponuda.cijena_ponude)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Uredi Natječaj-Ponuda", "Edit", new { id = Model.id_natjecaj_ponuda }, htmlAttributes: new { @class = "text-white btn btn-success" })
    <div class="btn btn-danger">
        <a class="boja" href="/natjecaj_ponuda/">Natrag</a>
    </div>
</p>
