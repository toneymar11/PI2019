@model Ozoterija.Models.natjecaj_ponuda

@{
    ViewBag.Title = "Uredi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Uredi</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_natjecaj_ponuda)

        <div class="form-group">
            @Html.LabelFor(model => model.fk_ponuda, "Ponuda", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_ponuda", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_ponuda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fk_natjecaj, "Natječaj", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_natjecaj", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_natjecaj, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary" type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="btn btn-danger">
    <a class="boja" href="/ponuda/">Natrag</a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
