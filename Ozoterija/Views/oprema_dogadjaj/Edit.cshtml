@model Ozoterija.Models.oprema_dogadjaj

@{
    ViewBag.Title = "Uredi oprema-događaj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Uredi oprema-događaj</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_oprema_dogadjaj)

        <div class="form-group">
            @Html.LabelFor(model => model.fk_oprema, "Ime oprema", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_oprema", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_oprema, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fk_dogadjaj, "Ime događaj", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_dogadjaj", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_dogadjaj, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi oprema-događaj" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="btn btn-danger">
    <a class="boja" href="/oprema_dogadjaj/">Natrag</a>
</div>
<style>
    .boja {
        color: white;
    }

        .boja:hover {
            color: black;
            text-decoration: none;
        }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
