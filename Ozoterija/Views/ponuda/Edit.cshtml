@model Ozoterija.Models.ponuda

@{
    ViewBag.Title = "Uredi ponudu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Uredi ponudu</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_ponuda)

        <div class="form-group">
            @Html.LabelFor(model => model.cijena_ponude, "Cijena ponude", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cijena_ponude, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cijena_ponude, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary" type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="btn btn-danger">
    <a class="boja" href="/ponuda/">Natrag</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
