@model Ozoterija.Models.ponuda_referentni_tip

@{
    ViewBag.Title = "Kreiraj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kreiraj Novi</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.fk_referentni_tip, "Referenti_tip", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_referentni_tip", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_referentni_tip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fk_ponuda, "Ponuda", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_ponuda", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_ponuda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary" type="submit" value="Napravi Ponuda-Referenti-Tip" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<div class="btn btn-danger">
    <a class="boja" href="/ponuda_referenti_tip/">Natrag</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
