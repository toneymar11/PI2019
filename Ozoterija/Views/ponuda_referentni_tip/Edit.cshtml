            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fk_ponuda, "Ponuda", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_ponuda", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_ponuda, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary" type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div class="btn btn-danger">
