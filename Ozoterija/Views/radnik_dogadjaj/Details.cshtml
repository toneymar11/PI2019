@model Ozoterija.Models.radnik_dogadjaj

@{
    ViewBag.Title = "Detalji radnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalji događaj radnik</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv događaja
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dogadjaj.naziv_dogadjaja)
        </dd>

        <dt>
            Ime radnika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.radnik.ime_radnika)
        </dd>

        <dt>
            Pocetak događaja
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pocetak_dogadjaja)
        </dd>

        <dt>
            Kraj događaja
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kraj_dogadjaja)
        </dd>

        <dt>
            Plata
        </dt>

        <dd>
            @Html.DisplayFor(model => model.plata)
        </dd>

        <dt>
           Uloga
        </dt>

        <dd>
            @Html.DisplayFor(model => model.uloga)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Uredi", "Edit", new { id = Model.id_radnik_dogadjaj }, htmlAttributes: new { @class = "text-white btn btn-success" }) 
    <a class="text-white btn btn-danger" href="~/radnik_dogadjaj/Index">Natrag</a>
</p>
