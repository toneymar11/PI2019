                @Html.DropDownList("fk_dogadjaj", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_dogadjaj, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

    <a class="text-white btn btn-danger" href="~/radnik_dogadjaj/Index">Natrag</a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
