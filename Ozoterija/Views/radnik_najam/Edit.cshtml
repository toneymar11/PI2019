@model Ozoterija.Models.radnik_najam

@{
    ViewBag.Title = "Uredi najam radnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Uredi najam</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_radnik_najam)

        <div class="form-group">
            @Html.LabelFor(model => model.otkada,"Otkad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.otkada, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.otkada, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dokada,"Dokad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dokada, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dokada, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.plata,"Plaća", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.plata, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.plata, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.uloga,"Uloga", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.uloga, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.uloga, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fk_radnik, "Radnik", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_radnik", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_radnik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fk_najam, "Najam", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("fk_najam", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.fk_najam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="btn btn-danger">
    <a class="boja" href="/radnik_najam/">Natrag</a>
</div>

<style>
    .boja {
        color: white;
    }

        .boja:hover {
            color: black;
            text-decoration: none;
        }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
