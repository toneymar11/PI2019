@model IEnumerable<Ozoterija.Models.radnik_najam>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pregled radnik najam</h2>

<div style="float:right" class="btn btn-success">
    <a class="boja" href="/radnik_najam/Create">Napravi najam radnika</a>
</div>
<br />
<br />
<br />

<table class="table table-hover table-striped bg-light" id="tablica">
    <thead>
        <tr>
            <th>
                Naziv najma
            </th>
            <th>
                Ime radnika
            </th>
            <th>
                Otkad
            </th>
            <th>
                Dokad
            </th>
            <th>
                Plaća
            </th>
            <th>
                Uloga
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.najam.naziv_najma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.radnik.ime_radnika)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.otkada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dokada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.plata)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.uloga)
                </td>
                <td>
                    <div class="btn btn-success">@Html.ActionLink("Uredi najam", "Edit", new { id = item.id_radnik_najam }, htmlAttributes: new { @class = "boja" })</div>
                    <div class="btn btn-warning"> @Html.ActionLink("Detalji najma", "Details", new { id = item.id_radnik_najam }, htmlAttributes: new { @class = "boja" }) </div>
                    <div class="btn btn-danger"> @Html.ActionLink("Izbriši najam", "Delete", new { id = item.id_radnik_najam }, htmlAttributes: new { @class = "boja" })</div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">


    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>

    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tablica').DataTable({
                language: {
                    search: "Pretraga",
                    info: "_START_ - _END_ (ukupno _TOTAL_)",
                    lengthMenu: "Prikaži _MENU_ zapisa",
                    paginate: {
                        first: "Prva",
                        previous: "Prethodna",
                        next: "Sljedeća",
                        last: "Zadnja"
                    },
                    emptyTable: "Nema podataka za prikaz",
                    info: "_START_ - _END_ od ukupno _TOTAL_ zapisa",
                    infoEmpty: "Nema podataka za prikaz",
                    infoFiltered: "(filtrirano od ukupno _MAX_ zapisa)",
                    zeroRecords: "Ne postoje traženi podaci"
                }
            });
        });


    </script>
}
<style>
    .boja {
        color: white;
    }

        .boja:hover {
            color: black;
            text-decoration: none;
        }
</style>