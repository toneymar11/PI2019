@model Ozoterija.Models.referetni_tip

@{
    ViewBag.Title = "Uredi referentni tip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Uredi referentni tip</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_referetni_tip)

        <div class="form-group">
            @Html.LabelFor(model => model.ime_referetni_tip, "Ime referentnog tipa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ime_referetni_tip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ime_referetni_tip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cijena_referetni_tip, "Cijena referentnog tipa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cijena_referetni_tip, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cijena_referetni_tip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary" type="submit" value="Spremi Referentni Tip" />
            </div>
        </div>
    </div>
}

<div class="btn btn-danger">
    <a class="boja" href="/referetni_tip/">Natrag</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    .boja {
        color: white;
    }

        .boja:hover {
            color: black;
            text-decoration: none;
        }
</style>