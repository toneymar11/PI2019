@model PagedList.IPagedList<Ozoterija.Models.referetni_tip>
@using PagedList.Mvc
@{



    ViewBag.Title = "Pregled referentni tipova";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pregled referentni tipova</h2>

<div style="float:right" class="btn btn-success">
    <a class="boja" href="/referetni_tip/Create">Napravi Referentni Tip</a>
</div>
<br />
<br />
<br />
<table class="table table-hover" id="tablica">
    <tr>
        <th>
            @Html.ActionLink("Ime referentnog tipa", "Index",
              new { sortOrder = "ref_tip", CurrentSort = ViewBag.CurrentSort })
        </th>
        <th>
            @Html.ActionLink("Cijena Referentnih Tipova", "Index",
                new { sortOrder = "cjena_ref", CurrentSort = ViewBag.CurrentSort })

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ime_referetni_tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cijena_referetni_tip)
            </td>
            <td>
                <div class="btn btn-success">@Html.ActionLink("Uredi Referentni Tip", "Edit", new { id = item.id_referetni_tip }, htmlAttributes: new { @class = "boja" })</div>
                <div class="btn btn-warning"> @Html.ActionLink("Detalji događaja", "Details", new { id = item.id_referetni_tip }, htmlAttributes: new { @class = "boja" }) </div>
                <div class="btn btn-danger"> @Html.ActionLink("Izbriši događaj", "Delete", new { id = item.id_referetni_tip }, htmlAttributes: new { @class = "boja" })</div>
            </td>
        </tr>
    }

</table>
<div id='Paging' style="text-align:center">
    Stranica @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    od @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
<style>
    .boja {
        color: white;
    }

        .boja:hover {
            color: black;
            text-decoration: none;
        }
</style>

